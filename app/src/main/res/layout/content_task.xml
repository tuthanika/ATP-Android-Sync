<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_task_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/label_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/task_edit_label_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/task_title_textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_edit_hint_title"/>

            <!-- Source -->
            <TextView
                android:id="@+id/label_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_label_source"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/task_source_remote_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/task_source_path_textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_edit_hint_source"/>

            <!-- Destination -->
            <TextView
                android:id="@+id/label_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_label_dest"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/task_dest_remote_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/task_dest_path_textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_edit_hint_dest"/>

            <!-- Extra Flags -->
            <TextView
                android:id="@+id/label_extra_flags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_extra_flags_label"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/task_extra_flags_textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="--exclude *.tmp --transfers 4"/>

            <!-- Direction -->
            <TextView
                android:id="@+id/label_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_edit_label_direction"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/task_direction_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/descriptionSyncDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_sync_direction_sync_toremote"
                android:layout_marginTop="4dp"/>

            <!-- Filter -->
            <TextView
                android:id="@+id/label_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_edit_label_filter"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/task_filter_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- On Fail -->
            <TextView
                android:id="@+id/label_onFail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run on Failure"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/task_onFail_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- On Success -->
            <TextView
                android:id="@+id/label_onSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run on Success"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/task_onSuccess_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
